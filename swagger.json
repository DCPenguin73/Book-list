    "basePath": "/",
    "schemes": [
      "https",
      "http"
    ],
    "paths": {
      "/api-docs": {
        "get": {
          "summary": "Get Swagger JSON",
          "description": "",
          "responses": {
            "default": {
              "description": ""
            }
          }
        }
      },
      "/books/": {
        "get": {
          "summary": "Get all books",
          "description": "Get all books from database",
          "produces": [
            "application/json"
          ],
          "responses": {
            "200": {
              "description": "OK"
            }
          }
        },
        "post": {
          "summary": "Create a new book",
          "description": "Add new book into database",
          "parameters": [
            {
              "name": "body",
              "in": "body",
              "schema": {
                "type": "object",
                "properties": {
                  "title": {
                    "example": "One Fish Two Fish Red Fish Blue Fish"
                  },
                  "firstName": {
                    "example": "Dr. Seuss"
                  },
                  "lastName": {
                    "example": null
                  },
                  "series": {
                    "example": "Chronicals of Narnia"
                  },
                  "genre": {
                    "example": "Children's"
                  },
                  "pYear": {
                    "example":  "1960"
                  },
                  "age": {
                    "example": "3-7"
                  }
                }
              }
            }
          ],
          "responses": {
            "201": {
              "description": "Created"
            },
            "500": {
              "description": "Internal Server Error"
            }
          }
        }
      },
      "/books/{id}": {
        "get": {
          "summary": "Get a book by id",
          "description": "Get a book by id from database",
          "produces": [
            "application/json"
          ],
          "parameters": [
            {
              "name": "id",
              "in": "path",
              "required": true,
              "type": "string"
            }
          ],
          "responses": {
            "200": {
              "description": "OK"
            }
          }
        },
        "put": {
          "summary": "Update a book by id",
          "description": "Update a book by id from database",
          "parameters": [
            {
              "name": "id",
              "in": "path",
              "required": true,
              "type": "string"
            },
            {
              "name": "body",
              "in": "body",
              "schema": {
                "type": "object",
                "properties": {
                  "title": {
                    "example": "any"
                  },
                  "firstName": {
                    "example": "any"
                  },
                  "lastName": {
                    "example": "any"
                  },
                  "series": {
                    "example": "any"
                  },
                  "genre": {
                    "example": "any"
                  },
                  "pYear": {
                    "example": "any"
                  },
                  "age": {
                    "example": "any"
                  }
                }
              }
            }
          ],
          "responses": {
            "204": {
              "description": "No Content"
            },
            "500": {
              "description": "Internal Server Error"
            }
          }
        },
        "delete": {
          "summary": "Delete a book by id",
          "description": "Delete a book by id from database",
          "parameters": [
            {
              "name": "id",
              "in": "path",
              "required": true,
              "type": "string"
            }
          ],
          "responses": {
            "200": {
              "description": "OK"
            },
            "500": {
              "description": "Internal Server Error"
            }
          }
        }
      }
    }
